{
  "name": "OneMount Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "USERNAME": "vscode",
      "USER_UID": "1000",
      "USER_GID": "1000"
    }
  },
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "containerUser": "vscode",
  "initializeCommand": "bash -lc '.devcontainer/bin/ensure-host-x11'",
  "runArgs": [
    "--device=/dev/fuse",
    "--cap-add=SYS_ADMIN",
    "--name", "onemount-dev",
    "--security-opt=apparmor:unconfined"
  ],
  "mounts": [
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.Xauthority,target=/tmp/.Xauthority,type=bind,consistency=cached,readonly",
    "source=${localEnv:XDG_RUNTIME_DIR},target=${localEnv:XDG_RUNTIME_DIR},type=bind,consistency=cached,propagation=rshared",
    "source=/usr/share/applications,target=/usr/share/applications,type=bind,consistency=cached,readonly",
    "source=/usr/share/mime,target=/usr/share/mime,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.local/share,target=/run/host-data,type=bind,consistency=cached,readonly",
    "source=${localEnv:HOME}/.config,target=/run/host-config,type=bind,consistency=cached,readonly"
  ],
  "containerEnv": {
    "DISPLAY": "${localEnv:DISPLAY}",
    "XAUTHORITY": "/tmp/.Xauthority",
    "XDG_RUNTIME_DIR": "${localEnv:XDG_RUNTIME_DIR}",
    "DBUS_SESSION_BUS_ADDRESS": "${localEnv:DBUS_SESSION_BUS_ADDRESS}",
    "XDG_CONFIG_HOME": "/run/host-config",
    "XDG_DATA_HOME": "/run/host-data",
    "XDG_DATA_DIRS": "/run/host-data:/usr/local/share:/usr/share",
    "GIO_USE_PORTALS": "1",
    "GTK_USE_PORTAL": "1"
  },
  "remoteEnv": {
    "GO111MODULE": "on",
    "GOPATH": "/home/vscode/go",
    "GOPROXY": "https://proxy.golang.org,direct"
  },
  "customizations": {
    "jetbrains": {
      "settings": {
        "JavaScript:app:JSEditorOptions.automatically_replace_with_template_string_on_typing": false,
        "JavaScript:app:JSEditorOptions.escape_pasted_text": false,
        "JavaScript:app:JSEditorOptions.close_html_single_tags": false,
        "JavaScript:app:JSEditorOptions.convert_html_to_react": false,
        "JavaScript:app:JSEditorOptions.escape_doc_on_copy_paste": false,
        "com.intellij:app:GeneralSettings.autoSaveIfInactive": true,
        "com.intellij:app:Vcs-Log-App-Settings.show_changes_from_parents": true,
        "com.intellij:app:Vcs-Log-App-Settings.show_tag_names": true,
        "com.intellij:app:VcsApplicationSettings.manage_ignore_files": true,
        "com.intellij:app:HttpConfigurable.use_proxy_pac": true
      },
      "backend": "GoLand",
      "plugins": [
        "org.jetbrains.plugins.go-template"
      ]
    },
    "vscode": {
      "settings": {
        "go.useLanguageServer": true,
        "go.toolsManagement.autoUpdate": true,
        "go.testFlags": [
          "-v"
        ],
        "gopls": {
          "staticcheck": true
        }
      },
      "extensions": [
        "golang.go",
        "ms-azuretools.vscode-docker",
        "ms-vscode.makefile-tools",
        "github.vscode-github-actions"
      ]
    }
  },
  "postCreateCommand": "bash -lc '.devcontainer/bin/ensure-python-toolchain && go version && go mod download && python3 -m pip --version && pip --version'",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "vscode",
      "installZsh": true,
      "configureZshAsDefaultShell": true
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "20"
    }
  }
}
